<VirtualHost *:80>
	ServerName mirrors.ocf.berkeley.edu
	ServerAlias mirrors

	DocumentRoot /opt/mirrors/ftp/

	Options +Indexes +SymlinksIfOwnerMatch
	IndexOptions NameWidth=* +SuppressDescription
	
	# prevent non-OCF from using tons of bandwidth
	<Directory /opt/mirrors/ftp/>
		Order deny,allow

		Allow from 169.229.172.64/26
		Allow from 127.0.0.0/8
		Deny from all
	</Directory>
</VirtualHost>
