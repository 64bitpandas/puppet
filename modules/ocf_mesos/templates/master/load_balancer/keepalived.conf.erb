vrrp_instance VI_1 {
    interface eth0
    state MASTER
    virtual_router_id 51
    priority 100

    authentication {
        auth_type PASS
        auth_pass $ <%= @keepalived_secret  %>
    }

    virtual_ipaddress {
        <% @virtual_addresses.each do |ip| %>
            <%= ip %>
        <% end %>
    }
}
