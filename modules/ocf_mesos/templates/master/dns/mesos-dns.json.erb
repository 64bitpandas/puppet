<%# https://mesosphere.github.io/mesos-dns/docs/configuration-parameters.html %>
{
  "zk": "zk://<%= @zookeeper_host %>/mesos",
  "refreshSeconds": 15,
  "ttl": 1,
  "domain": "mesos",
  "port": 53,

  <%# We use a bs resolver, because we don't want mesos-dns resolving real queries. %>
  "resolvers": ["255.255.255.255"],

  "mesosAuthentication": "basic",
  "mesosCredentials": {
    "principal": "ocf",
    "secret": "<%= @mesos_http_password %>"
  },
  "timeout": 5,
  "httpon": true,
  "dnson": true,
  "httpport": 8123,
  "externalon": true,
  "listener": "0.0.0.0",
  "SOAMname": "ns1.mesos",
  "SOARname": "root.ns1.mesos",
  "SOARefresh": 1,
  "SOARetry": 600,
  "SOAExpire": 86400,
  "SOAMinttl": 1,
  "IPSources": ["netinfo", "mesos", "host"]
}
