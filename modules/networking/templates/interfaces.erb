auto lo
iface lo inet loopback

<% if @ipaddress -%>
auto <% if bridge %>br0<% else %>eth0<% end %>
iface <% if bridge %>br0<% else %>eth0<% end %> inet static
  address <%= ipaddress %>
  netmask <%= netmask %>
<% if @gateway -%>
  gateway <%= gateway %>
<% end -%>
<% if bridge -%>
  bridge_ports eth0
  bridge_stp off
  bridge_maxwait 0
  bridge_fd 0
<% end -%>
<% else -%>
auto eth0
iface eth0 inet dhcp
<% end -%>
