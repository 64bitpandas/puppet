mydomain = rt.ocf.berkeley.edu
mydestination = $mydomain
myorigin = $mydomain
relay_domains = ocf.berkeley.edu
relayhost = smtp.ocf.berkeley.edu
masquerade_classes = envelope_sender, envelope_recipient, header_sender, header_recipient

# OCF and Google Apps
mynetworks = 169.229.10.0/24 216.239.32.0/19 64.233.160.0/19 66.249.80.0/20 72.14.192.0/18 209.85.128.0/17 66.102.0.0/20 74.125.0.0/16 64.18.0.0/20 207.126.144.0/20 173.194.0.0/16

alias_maps = hash:/etc/aliases
alias_database = hash:/etc/aliases

# IPv6 is disabled and not in SPF do not enable without SM+GM approval
inet_protocols = ipv4

# TODO: provide chain, don't hard-code FQDN
smtpd_tls_cert_file = /etc/ssl/private/typhoon.ocf.berkeley.edu.crt
smtpd_tls_key_file = /etc/ssl/private/typhoon.ocf.berkeley.edu.key
#smtp_tls_CApath = /etc/ssl/certs
smtpd_tls_auth_only = yes
smtpd_tls_security_level = may
smtp_tls_security_level = may
smtpd_tls_session_cache_database = btree:${data_directory}/smtpd_scache
smtp_tls_session_cache_database = btree:${data_directory}/smtp_scache
