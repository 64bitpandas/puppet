# OCF config
Defaults passprompt="%u/root's password: "
Defaults env_reset
Defaults secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

root ALL=(ALL) ALL
apt-dater ALL=NOPASSWD: /usr/bin/apt-get, /usr/bin/aptitude, /sbin/reboot
dumper ALL=NOPASSWD: /usr/bin/rsync, /usr/bin/nice, /usr/bin/ionice
%admin ALL=(ALL) ALL
<% gsudo.each do |group| -%>
%<%= group %> ALL=(ALL) ALL
<% end -%>
<% usudo.each do |user| -%>
<%= user %> ALL=(ALL) ALL
<% end -%>

#includedir /etc/sudoers.d
