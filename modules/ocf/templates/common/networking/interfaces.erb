# OCF config

auto lo
iface lo inet loopback

<% if octet != :undef -%>
<% if octet.to_i > 192 -%>
auto eth0
allow-hotplug eth0
iface eth0 inet static
        address 128.32.129.<%= octet %>
        netmask 255.255.255.192
        network 128.32.129.192
        broadcast 128.32.129.255
        gateway 128.32.129.193
        # dns-* options are implemented by the resolvconf package, if installed
        dns-domain ocf.berkeley.edu
        dns-nameservers 128.32.129.242 128.32.206.12 128.32.136.9
        dns-search int.ocf.berkeley.edu ocf.berkeley.edu

auto eth0:0
allow-hotplug eth0:0
iface eth0:0 inet static
        address 192.168.99.<%= octet %>
        netmask 255.255.255.0
        network 192.168.99.0
        broadcast 192.168.99.255
<% else -%>
auto eth0
allow-hotplug eth0
iface eth0 inet static
        address 192.168.99.<%= octet %>
        netmask 255.255.255.0
        network 192.168.99.0
        broadcast 192.168.99.255
        gateway 192.168.99.1
        # dns-* options are implemented by the resolvconf package, if installed
        dns-domain int.ocf.berkeley.edu
        dns-nameservers 192.168.99.242 128.32.206.12 128.32.136.9
        dns-search int.ocf.berkeley.edu ocf.berkeley.edu
<% end -%>
<% else -%>
auto eth0
allow-hotplug eth0
iface eth0 inet dhcp
<% end -%>
