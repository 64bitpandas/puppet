auto lo
iface lo inet loopback

auto eth0
allow-hotplug eth0
<% if octet != :undef -%>
iface eth0 inet static
<% if octet.to_i > 192 -%>
  address 128.32.129.<%= octet %>
  netmask 255.255.255.192
  gateway 128.32.129.193
<% elsif octet.to_i > 65 && octet.to_i < 127 -%>
  address 169.229.172.<%= octet %>
  netmask 255.255.255.192
  gateway 169.229.172.65
<% else -%>
  address 192.168.99.<%= octet %>
  netmask 255.255.255.0
  gateway 192.168.99.1
<% end -%>
<% else -%>
iface eth0 inet dhcp
<% end -%>
